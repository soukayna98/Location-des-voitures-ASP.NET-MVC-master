@model WebApplication4.Models.Voiture

@{
    ViewBag.Title = "voiture_info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="card">
            <div class="row">
                <aside class="col-sm-5 border-right">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div><img style="max-width: 100%;max-height: 100%;" src="@Url.Content(Model.imageLocation)"></div>
                        </div> <!-- slider-product.// -->

                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <aside class="col-sm-7">
                    <article class="card-body p-5">
                        <h3 class="title mb-3"> @Html.DisplayFor(model => model.Marque1.Nom)  @Html.DisplayFor(model => model.Module1.Nom)</h3>

                        <p class="price-detail-wrap">
                            <span class="price h3 text-warning">
                                <span class="currency">MAD</span><span class="num"> @Html.DisplayFor(model => model.montant)</span>
                            </span>
                            <span>/@WebApplication4.Resources.Views.Home.Voiture_info.jour</span>
                        </p> <!-- price-detail-wrap .// -->
                        <dl class="param param-feature">
                            <dt>@WebApplication4.Resources.Views.Home.Voiture_info.categorie#</dt>
                            <dd> @Html.DisplayFor(model => model.Categorie1.Nom)</dd>
                        </dl>  <!-- item-property-hor .// -->
                        <dl class="param param-feature">
                            <dt>@WebApplication4.Resources.Views.Home.Voiture_info.capacite#</dt>
                            <dd> @Html.DisplayFor(model => model.capacite) personnes</dd>
                        </dl>  <!-- item-property-hor .// -->


                        <dl class="param param-feature">
                            <dt>Gazole#</dt>
                            <dd> @Html.DisplayFor(model => model.charge_diesl) Litre</dd>
                        </dl>  <!-- item-property-hor .// -->

                        <dl class="param param-feature">
                            <dt>@WebApplication4.Resources.Views.Home.Voiture_info.max_v#</dt>
                            <dd> @Html.DisplayFor(model => model.max_vitesse) km/h</dd>
                        </dl>  <!-- item-property-hor .// -->

                        <hr>
                        @Html.ActionLink(@WebApplication4.Resources.Views.Home.Voiture_info.retour, "Index", null, new { @class = "btn btn-default  " })
                        @Html.ActionLink(@WebApplication4.Resources.Views.Home.Voiture_info.Reserver, "Reserver","Reservations", new { id = Model.Id}, new { @class = "btn btn-success" })

                    </article> <!-- card-body.// -->
                </aside> <!-- col.// -->
            </div> <!-- row.// -->
        </div>
    </div>

