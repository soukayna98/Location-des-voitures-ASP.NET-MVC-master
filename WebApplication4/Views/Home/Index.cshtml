@model IEnumerable<WebApplication4.Models.Voiture>

@{
    ViewBag.Title = "Home Page";
}




<!-- /.col-lg-3 -->

<!------ Include the above in your HEAD tag ---------->

<div class="container">
    
</div>
<section>
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">

            <div class="col-md-6" >
                <div class="carousel-item">
                    <img src="~/Content/images/vw-bulli-3583964_1280.png" style="height:300px" class="d-block w-100" alt="...">
                </div>
            </div>
            <div class="col-md-6" style="margin-top:80px">
                <div class="carousel-item">
                    <h2 style="    font-family: fantasy;padding: 20px;">
                        @WebApplication4.Resources.Views.Home.Index.Titre

                    </h2>
                    <p style="color:cornflowerblue">
                        @WebApplication4.Resources.Views.Home.Index.Soustitre
                    </p>
                </div>
            </div>

            <!--https://upload.wikimedia.org/wikipedia/commons/8/8d/Yarra_Night_Panorama%2C_Melbourne_-_Feb_2005.jpg-->
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<section class="search-sec">
    <div class="container">
        @using (Html.BeginForm()) { 
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-3"></div>

                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownList("catId", ViewBag.cat as SelectList, @WebApplication4.Resources.Views.Home.Index.choixCat, new { @class = "form-control " })

                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownList("marId", ViewBag.mar as SelectList, @WebApplication4.Resources.Views.Home.Index.choixMar, new { @class = "form-control " })

                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        <button type="submit" class="btn btn-success wrn-btn"> @WebApplication4.Resources.Views.Home.Index.chercher</button>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</section>

<div class="row">


</div>

<div class="container">
    <div class="row ">

        <h1 class="text-center" style="color:#544e4e;margin-bottom:50px;font-weight:bold"> @WebApplication4.Resources.Views.Home.Index.titrecats</h1>

        @if (Model.Count() == 0) {<div class="row text-center"><label class=" label label-warning" style="font-size:25px">No item</label></div>  }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-3 ">
                    <div class="card h-100">
                        <a href=""><img class="card-img-top" style="width: 100%;max-width: 100%; height: 200px;max-height: 200px;" src="@Url.Content(item.imageLocation)" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#">@Html.DisplayFor(modelItem => item.Marque1.Nom)  @Html.DisplayFor(modelItem => item.Module1.Nom)</a>
                            </h4>
                            <h5 style="font-size:16px;font-weight:bold">MAD @Html.DisplayFor(modelItem => item.montant)</h5>
                            <p class="card-text"><span style="color: #a29b9b;"> @WebApplication4.Resources.Views.Home.Index.categorie :</span> @Html.DisplayFor(modelItem => item.Categorie1.Nom)</p>
                            <p class="card-text"><span style="color: #a29b9b;"> @WebApplication4.Resources.Views.Home.Index.capacite :</span> @Html.DisplayFor(modelItem => item.capacite) personnes</p>
                            <p class="card-text"><span style="color: #a29b9b;"> @WebApplication4.Resources.Views.Home.Index.max_v :</span> @Html.DisplayFor(modelItem => item.max_vitesse) km/h</p>
                            @Html.ActionLink(@WebApplication4.Resources.Views.Home.Index.visualiser, "voiture_info", new { id = item.Id }, new { @class = "btn btn-info form-control" })
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>
            }
        }


    </div>
</div>

<div class="row text-center" style="background-color:#f8f8f8">
    <h1 style="padding:40px"> @WebApplication4.Resources.Views.Home.Index.maptitre</h1>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d52900.302165590576!2d-5.036203856290953!3d34.03697313601347!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xee579070206772d7!2sAVIS%20-%20Location%20Voiture%20F%C3%A8s!5e0!3m2!1sfr!2sma!4v1578249024883!5m2!1sfr!2sma" width="900" height="450" frameborder="0" style="border:0;" allowfullscreen="true"></iframe>
</div>

