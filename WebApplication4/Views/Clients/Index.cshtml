@model IEnumerable<WebApplication4.Models.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Liste des clients</h2>

<p>
    @Html.ActionLink("Ajouter Client", "Create",null,new { @class ="btn btn-default"})
</p>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @using (Html.BeginForm())
                    {
                        if (item.estNoir == 0)
                        {
                            @Html.ActionLink("Add To BlackList", "AddBlack", new { id = item.Id }, new { @class = "btn btn-primary" })
                        }
                        else
                        { 
                            @Html.ActionLink("Remove From BlackList", "AddBlack", new { id = item.Id }, new { @class = "btn btn-default" })
                    }
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }

                </td>
            </tr>
        }

    </table>
    </div>
